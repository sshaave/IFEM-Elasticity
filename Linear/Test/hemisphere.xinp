<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- Hemispherical shell, 1/8 of a hemisphere.
     Quartic spline Kirchhoff-Love thin shell elements. !-->

<simulation>

  <!-- General - geometry definitions !-->
  <geometry>
    <patchfile>firstHemiSquarter.g2</patchfile>
    <raiseorder patch="1" u="2" v="2"/>
    <refine patch="1" u="3" v="3"/>
    <topologysets>
      <set name="end" type="vertex">
        <item patch="1">1</item> 
      </set>
    </topologysets>
  </geometry>

  <!-- General - Gauss quadrature scheme !-->
  <discretization>
    <nGauss>4</nGauss>
  </discretization>

  <!-- General - boundary conditions !-->
  <boundaryconditions>
    <dirichlet set="end" comp="123"/>
  </boundaryconditions>

  <!-- Problem specific block !-->
  <KirchhoffLove>
    <isotropic E="6.825e7" nu="0.3" rho="0.0" thickness="0.04"/>
    <pointload patch="1" xi="0.0" eta="0.0" direction="1">2</pointload> <!-- ? !-->
    <pointload patch="1" xi="1.0" eta="0.0" direction="2">-2</pointload> <!-- ? !-->
  </KirchhoffLove>

  <!-- General - point result output !-->
  <postprocessing>
    <resultpoints>
      <point patch="1" u="0.0" v="0.5"/>
      <point patch="1" u="1.0" v="0.5"/>
    </resultpoints>
  </postprocessing>

</simulation>
